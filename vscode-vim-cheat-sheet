\subsection{Equivalents}
% \centering
\begin{tabular}{|r|l|}
\hline
% Afghanistan & AF \\
% Aland Islands & AX \\
% Albania    &AL  \\
% Algeria   &DZ \\
% American Samoa & AS \\
% Andorra & AD   \\
% Angola & AO \\
\verb!c! & \verb!c$!          \\
\verb!s! & \verb!cl!          \\
\verb!S! & \verb!^c!          \\
\verb!I! & \verb!^i!          \\
\verb!A! & \verb!$a!          \\
\verb!o! & \verb!A<CR>!       \\
\verb!O! & \verb!ko!          \\
